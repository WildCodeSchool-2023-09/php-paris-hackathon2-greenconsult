<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>
            {% block title %}Home{% endblock %}
        </title>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <header>
        {% block header %}
            <div class="flex-icon">
                <img src="{{ asset('build/images/icons/scissors.png') }}" alt="scissors icon">
                <img src="{{ asset('build/images/icons/user.png') }}" alt="scissors icon">
            </div>
        {% endblock %}
    </header>
    <body>
        {% block body %}
        {% endblock %}
    </body>
</html>
